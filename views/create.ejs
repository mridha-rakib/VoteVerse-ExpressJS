<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Bootstrap demo</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-6 offset-md-3 my-5">
          <div class="card card-body">
            <h4>Create A New Poll</h4>
            <form action="/create" method="POST">
              <div class="form-group">
                <label for="title">Enter Title</label>
                <input
                  type="text"
                  name="title"
                  id="title"
                  class="form-control"
                />
              </div>
              <div class="form-group">
                <label for="description">Enter description</label>
                <textarea
                  name="description"
                  id="description"
                  class="form-control"
                ></textarea>
              </div>
              <div id="options">
                <p>Enter your options</p>
                <div class="form-group">
                  <input
                    type="text"
                    name="option"
                    class="form-control"
                    placeholder="option 1"
                  />
                </div>
                <div class="form-group">
                  <input
                    type="text"
                    name="option"
                    class="form-control"
                    placeholder="option 2"
                  />
                </div>
              </div>
              <button class="btn btn-secondary btn-sm" id="addOptions">
                Add More Option
              </button>
              <br /><br />
              <input
                type="submit"
                class="btn btn-primary"
                value="Create Poll"
              />
            </form>
          </div>
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>

    <script>
      let options = document.getElementById("options");

      let addOption = document.getElementById("addOptions");

      addOption.addEventListener("click", function (e) {
        e.preventDefault();

        let option = createNewOption();
        options.appendChild(option);
      });

      function createNewOption() {
        let div = document.createElement("div");
        div.className = "form-group";

        let input = document.createElement("input");
        input.type = "text";
        input.name = "option";
        input.placeholder = "Option";
        input.className = "form-control";

        div.appendChild(input);

        return div;
      }
    </script>
  </body>
</html>
